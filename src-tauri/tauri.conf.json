{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "海投助手",
    "version": "0.0.4"
  },
  "tauri": {
    "allowlist": {
      "window": {
        "setFullscreen": false
      },
      "all": true,
      "http": {
        "all": true
      },
      "shell": {
        "all": true
      }
    },
    "windows": [
      {
        "title": "海投助手",
        "width": 1440,
        "height": 900,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "macOS": {
        "signingIdentity": "Apple Development: aleksichen@gmail.com (SQX223S734)"
      },
      "windows": {
        "wix": {
          "language": "zh-CN"
        }
      },
      "active": true,
      "targets": "all",
      "identifier": "com.aleksi.seajob",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "resources": [
        "resources/seajob-executor-macos-arm64",
        "resources/seajob-executor-win.exe"
      ]
    }
  }
}