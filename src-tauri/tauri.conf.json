{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "海投助手",
    "version": "0.0.1"
  },
  "tauri": {
    "allowlist": {
      "window": {
          "setFullscreen": true
      },
      "all": true,
      "http": {
        "all": true
      },
      "shell": {
        "all": true
      }
    },
    "windows": [
      {
        "title": "seajob-client",
        "width": 1440,
        "height": 900,
        "fullscreen": true
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.aleksi.seajob",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "resources": [
        "resources/*"
      ]
    }
  }
}
